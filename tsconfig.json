{  
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",    
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",    
    "paths": {
      "@modules/*":["./modules/*"],
      "@config/*":["./config/*"],
      "@shared/*":["./shared/*"],
      "@errors/*":["./errors/*"],
      "@utils/*":["./utils/*"]
    },        
  }
}
